{
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"printWidth": 180,
	"bracketSameLine": true,
	"useTabs": true,
	"importOrder": [
		"^@/assets/(.*)$",
		"^@/data/(.*)$",
		"^@/lib/(.*)$",
		"^@/context/(.*)$",
		"^@/hooks/(.*)$",
		"^@/types/(.*)$",
		"^@/components/ui/(.*)$",
		"^@/components/layout/(.*)$",
		"^@/components/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss", "prettier-plugin-django-alpine"]
}
